<Window
    x:Class="JeuDeTir_SAE_1._01_1._02.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:JeuDeTir_SAE_1._01_1._02"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="620"
    Height="500"
    mc:Ignorable="d" Icon="/logo.png">
    <Window.Background>
        <ImageBrush ImageSource="/FondMenu.png"/>
    </Window.Background>
    <Canvas x:Name="MenuCanvas">
        <Label
            x:Name="Titre"
            Width="137"
            Height="52"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Veuillez choisir &#xD;&#xA;la difficulté :"
            FontSize="16"
            FontWeight="Bold">
            <Label.Background>
                <ImageBrush />
            </Label.Background>
        </Label>
        <ComboBox
            x:Name="CBdifficulté"
            Canvas.Top="52"
            Width="120"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="CBdifficulté_SelectionChanged">
            <ComboBoxItem Content="Facile" />
            <ComboBoxItem Content="Moyen" />
            <ComboBoxItem Content="Difficile" />
        </ComboBox>
        <Button
            Canvas.Left="200"
            Width="200"
            Height="54"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="JOUER"
            FontFamily="Impact"
            FontSize="36"
            FontWeight="Bold" />
        <Label
            Canvas.Left="480"
            Width="116"
            Height="58"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Nombre de &#xD;&#xA;joueurs "
            FontSize="16"
            FontWeight="Bold" />
        <ComboBox
            Canvas.Left="480"
            Canvas.Top="52"
            Width="120"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <ComboBoxItem Content="Solo" />
            <ComboBoxItem Content="2 joueurs" />
        </ComboBox>
    </Canvas>
</Window>
